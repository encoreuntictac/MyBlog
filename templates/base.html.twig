<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/script.js') }}" defer></script>
        {% endblock %}
    </head>

    <body>
        <section class="page-base">
            <div class="container {% if app.request.attributes.get('_route') == 'edit_article' %}edit-page{% endif %}">
            
                <div class="wrapper">

                    <div class="sidebar" id="sidebar">

                        <div class="sidebar-top">

                            <div class="sidebar-logo">
                                <div>
                                    <a href="{{ path('show_home') }}"><img class="logo-img" src="{{ asset('images/contenu/blog.jpeg') }}"></a>
                                </div>
                                <h2>Blog</h2>
                                <button id="btn-sidebar"><img src="{{ asset('images/contenu/down.png') }}"></button>
                            </div>

                            <nav class="navbar" id="navbar">
                                <ul class="navbar__container">
                                    <li class="navbar__content">
                                        <div class="navbar__item">
                                            <a class="nav-img" href="#">
                                                <img src="{{ asset('images/contenu/dashboard.png') }}">
                                            </a>
                                            <div class="navbar-categ">
                                                Dashboard
                                            </div>
                                        </div>
                                        <div class="navbar-sub">
                                            <span>Dashboard</span>
                                        </div>
                                    </li>
                                    <li class="navbar__content">
                                        <div class="navbar__item">
                                            <a class="nav-img" href="#">
                                                <img src="{{ asset('images/contenu/square.png') }}">
                                            </a>
                                            <div class="navbar-categ">
                                                Category
                                                <img id="btn-navbar" src="{{ asset('images/contenu/chevron.png') }}">
                                            </div>
                                        </div>
                                        <div class="navbar-sub" id="navbar-sub">
                                            <span>Category</span>
                                            <span>Articles</span>
                                            <span>Clients</span>
                                        </div>
                                    </li>
                                </ul>
                            </nav>

                        </div>

                    </div>

                    <div class="main-box">

                        <div class="container">

                            {% block body %}{% endblock %}

                        </div>

                    </div>

                </div>

            </div>
        </section>
    </body>
</html>
