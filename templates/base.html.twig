<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/script.js') }}" defer></script>
        {% endblock %}
    </head>

    <body>
        <section class="base">
            <div class="container {% if app.request.attributes.get('_route') == 'edit_article' %}edit-page{% endif %}">
            
                <div class="wrapper">

                    <div class="sidebar" id="sidebar">
                        <div class="sidebar__top">
                            <div class="content">
                                <div class="btn-extend" id="btn-extend">
                                    <img class="icone" src="{{ asset('images/contenu/fleche.png') }}">
                                </div>
                                
                                <div class="logo">
                                    <div>
                                        <a href="{{ path('show_home') }}"><img class="logo-img" src="{{ asset('images/contenu/blog.jpeg') }}"></a>
                                    </div>
                                    <p>Blog</p>
                                </div>
                            </div>
                        </div>
                        <div class="sidebar__bottom">
                            <div class="box-input">
                                <div>
                                    <h1>A</h1>
                                </div>
                            </div>  
                        </div>
                    </div>

                    <div class="box">

                        <div class="box-top">

                        </div>

                        <div class="box-qst">
                            {% block header %}{% endblock %}
                        </div>

                        <div class="box-content">
                            {% block body %}{% endblock %}
                        </div>

                    </div>

                </div>

            </div>
        </section>
    </body>
</html>
