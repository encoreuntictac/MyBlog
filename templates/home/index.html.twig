{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<main class="wrapper-articles">
    <section class="topbar">
        <div class="search">
            <input type="search" placeholder="Search">
        </div>
        <div class="listedate">

        </div>
        <div class="action">
            <button>
                Ajouter un articles
            </button>
        </div>
    </section>
    
    <section class="main">
        <table>
            <thead>
                <tr>
                    <th>Nom Articles</th>
                    <th>
                        <select name="annee" id="annee-select">
                            {% for item in annee %}
                                <option value="{{item }}">{{item}}</option>
                            {% endfor %}
                        </select>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in articles %}
                    <tr>
                        <td><a href="{{ path('show_article', {id: item.id}) }}">{{ item.titre() }}</a></td>
                        <td>{{ item.getDate()|date("Y") }}</td>
                        <td class="btn-edit">
                            <button>
                                <a href="{{ path('edit_article_annee', {id: item.id, titre: item.titre}) }}">Edit</a>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
</main>

{% endblock %}
